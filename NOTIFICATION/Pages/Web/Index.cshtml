@page
@model NOTIFICATION.Pages.Web.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">WEBSITES/ACCOUNTS/DOMAINS</h3>


        <a asp-page="./Create" class="btn bg-gradient-warning btn-sm" style="float:right;">Add New</a>

    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Information[0].Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Information[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Information[0].Cost)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Information[0].AccountHosted)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Information[0].DateHosted)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Information[0].DateExpiring)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Information[0].DateRenewed)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Information[0].Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Information[0].DLastUpdateDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Information[0].Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Information[0].Client)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Information[0].Interval)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Information[0].AccontStatus)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Information[0].AccontType)
                        </th>
                        <th></th>
                    </tr>
                </thead>

                @{
                    int sn = 0;
                }
                <tbody>
                    @foreach (var item in Model.Information)
                    {
                        <tr>
                            <td>
                                @{
                                    sn++;
                                }
                                @sn
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cost)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccountHosted)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateHosted)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateExpiring)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateRenewed)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DLastUpdateDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Client.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Interval)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccontStatus)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccontType)
                            </td>
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-success">Action</button>

                                    <div class="btn-group">
                                        <button type="button" class="btn btn-success dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                        </button>
                                        <div class="dropdown-menu" style="">

                                            <a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                                            <a class="dropdown-item" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                                            <a class="dropdown-item" asp-page="./Details" asp-route-id="@item.Id">Details</a>

                                        </div>
                                    </div>
                                </div>

                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
