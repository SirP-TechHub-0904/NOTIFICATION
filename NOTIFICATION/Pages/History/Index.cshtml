@page
@model NOTIFICATION.Pages.History.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">HISTORY</h3>


        <a asp-page="./Create" class="btn bg-gradient-warning btn-sm" style="float:right;">Add New</a>

    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>
                            @Html.DisplayNameFor(model => model.RenewHistory[0].DateExpired)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RenewHistory[0].DateRenewed)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RenewHistory[0].Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RenewHistory[0].Information)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                @{
                    int sn = 0;
                }
                <tbody>
                    @foreach (var item in Model.RenewHistory)
                    {
                    <tr>
                        <td>
                            @{
                                sn++;
                            }
                            @sn
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.DateExpired)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateRenewed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Information.Id)
                        </td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-success">Action</button>

                                <div class="btn-group">
                                    <button type="button" class="btn btn-success dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                    </button>
                                    <div class="dropdown-menu" style="">

                                        <a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                                        <a class="dropdown-item" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                                        <a class="dropdown-item" asp-page="./Details" asp-route-id="@item.Id">Details</a>

                                    </div>
                                </div>
                            </div>

                        </td>

                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
